{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "recipes",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "recipes (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "recipes (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Flutter (web)",
            "flutterMode": "profile",
            "request": "launch",
            "type": "dart",
            "args": [
                "--web-port",
                "8080"
            ],
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart"
        },
        {
            "name": "Flutter (Android)",
            "flutterMode": "profile",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--no-sound-null-safety"
            ]
        },
        {
            "name": "Flutter (iOS)",
            "flutterMode": "profile",
            "request": "launch",
            "type": "dart",
            "args": [
                "--no-sound-null-safety",
                "-d", "ios"
            ],
            "deviceId": "iPhone"
        },
        {
            "name": "Flutter (macOS)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--no-sound-null-safety",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Flutter (Windows)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--no-sound-null-safety"
            ],
        }
    ]
}